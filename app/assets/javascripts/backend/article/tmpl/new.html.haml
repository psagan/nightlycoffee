%form{novalidate: true, name: 'article_form'}
  .form-group
    %label{for: 'title'}
      Title
    %input{type: 'text', class: 'form-control', id: 'title', placeholder: 'Title', 'ng-model': 'ctrl.article.title', required: true}
  .form-group
    %label{for: 'content'}
      Content
    %textarea{class: 'form-control', id: 'content', placeholder: 'content', 'ng-model': 'ctrl.article.content', required: true}
      {{ctrl.article.content}}
  %button{type: 'submit', class: 'btn btn-default', 'ng-click': 'ctrl.create()'}
    Submit