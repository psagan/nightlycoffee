%form
  .form-group
    %label{for: 'title'}
      Title
    %input{type: 'text', class: 'form-control', id: 'title', placeholder: 'Title', 'ng-model': 'ctrl.article.title'}
  .form-group
    %label{for: 'content'}
      Content
    %textarea{class: 'form-control', id: 'content', placeholder: 'content', 'ng-model': 'ctrl.article.content'}
      {{ctrl.article.content}}
  .form-group
    %tags-input{'ng-model': 'ctrl.tags'}

  %button{type: 'submit', class: 'btn btn-default', 'ng-click': 'ctrl.update()'}
    Submit